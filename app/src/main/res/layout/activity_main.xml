<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voto Online" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton_nulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nulo" />

            <RadioButton
                android:id="@+id/radioButton_boric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gabriel Boric" />

            <RadioButton
                android:id="@+id/radioButton_kast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jose Antonio Kast" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_votar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Votar" />

        <Button
            android:id="@+id/btn_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Resultados" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>